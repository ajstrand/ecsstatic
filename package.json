{
	"name": "ecsstatic-monorepo",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"package",
		"demos/*",
		"docsite"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel"
	},
	"devDependencies": {
		"prettier": "^3.2.4",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"packageManager": "pnpm@8.14.2",
	"prettier": {
		"jsxSingleQuote": true,
		"singleQuote": true,
		"printWidth": 100,
		"useTabs": true,
		"plugins": [
			"./node_modules/prettier-plugin-astro"
		],
		"overrides": [
			{
				"files": "*.astro",
				"options": {
					"parser": "astro"
				}
			},
			{
				"files": "*.md",
				"options": {
					"useTabs": false
				}
			}
		]
	}
}
